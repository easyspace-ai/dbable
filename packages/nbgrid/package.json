{
  "name": "@easygrid/nbgrid",
  "version": "1.0.0",
  "description": "一个高性能的表格组件库，提供类似 Airtable 的功能",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "demo": "vite --port 3001",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "table",
    "grid",
    "airtable",
    "data-grid",
    "typescript"
  ],
  "dependencies": {
    "@glideapps/glide-data-grid": "^6.0.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.300.0",
    "react-hotkeys-hook": "^5.2.1",
    "react-textarea-autosize": "^8.5.9",
    "zustand": "^4.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "catalog:",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "catalog:",
    "terser": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
